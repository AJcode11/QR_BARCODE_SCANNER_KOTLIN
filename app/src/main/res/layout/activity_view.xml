<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAttendence"
        android:text="ATTENDENCE OF STUDENTS"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerData"
        android:layout_centerInParent="true"
        android:text="Delete All Data"
        android:textColor="#ffffff"
        android:background="#1192FA"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAttendence"
        android:padding="10dp"
        android:layout_margin="5dp"/>


</RelativeLayout>